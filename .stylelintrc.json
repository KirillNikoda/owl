{
  "extends": ["stylelint-config-standard", "stylelint-order-config-standard"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": ["tab"],
    "color-hex-case": "upper"
  },
  "ignoreFiles": [
    ".eslintrc.js",
    ".next",
    "**/*.tsx",
    "**/*.ts",
    "**/*.js",
    "**/*.svg"
  ]
}
